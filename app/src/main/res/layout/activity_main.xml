<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.MainActivity">

    <ImageView
        android:id="@+id/imgSun"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:contentDescription="Sun"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_location"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:text="A Veiga, Galicia, Spain"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#000000"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgLatitude"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_latitude"/>

        <TextView
            android:id="@+id/tvLatitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:text="42.249638"/>

        <ImageView
            android:id="@+id/imgLongitude"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_longitude"/>

        <TextView
            android:id="@+id/tvLongitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:text="-7.025272"/>

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/imgSunrise"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_sunrise"/>

        <TextView
            android:id="@+id/tvSunrise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:text="2020-06-07 06:53"/>

        <ImageView
            android:id="@+id/imgSunset"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_sunset"/>

        <TextView
            android:id="@+id/tvSunset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:text="2020-06-07 22:12"/>

    </LinearLayout>

</LinearLayout>